<div class="row mb-4"></div>
{{# if products }}
    <div class="row mb-4">
        <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge badge-secondary float-right">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="badge badge-success">${{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action<span class="caret"></button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
                                <a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row mb-4">
        <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row mb-4">
        <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}

